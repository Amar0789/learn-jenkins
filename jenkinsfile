pipeline{
    agent any

    options{
        timeout (time: 10 , unit: 'SECONDS')
    }

    stages{
        stage('build'){
            steps{
                echo "building"
            }
        }
        stage('test'){
            steps{
                echo "testing"
            }
        }
        stage('scratch'){
            steps{
                echo "scratching"
            }
        }
        stage('ditch'){
            steps{
                sh 'echo something'
                sh 'sleep 10'
            }
        }        
    }

    post {
        always{
            echo "always echo "
        }
    }
}